{
  "compilerOptions": {
    "baseUrl": ".",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "lib": [
      "dom",
      "es2020"
    ],
    "module": "commonjs",
    "noFallthroughCasesInSwitch": true,
    "noImplicitThis": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strictBindCallApply": true,
    "strictFunctionTypes": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "target": "es2020",
    "outDir": "./dist",
    "rootDir": ".",
    "typeRoots": [
      "./node_modules/@types"
    ],
  },
  "include": [
    "src/**/*",
    "test/**/*",
    "test/**/*.json"
  ],
  "exclude": [
    "node_modules"
  ]
}
